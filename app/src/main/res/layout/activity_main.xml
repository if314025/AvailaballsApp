<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bolalob.develops.stud11314025.availaballs.MainActivity">

    <bolalob.develops.stud11314025.availaballs.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:font="@string/font_roboto"
        android:textSize="12sp"
        android:textColor="@color/txtclr1"
        android:text="No"
        android:id="@+id/TextNo" />

    <bolalob.develops.stud11314025.availaballs.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Lokasi"
        android:textColor="@color/txtclr1"
        app:font="@string/font_roboto"
        android:layout_marginRight="67dp"
        android:layout_marginEnd="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <bolalob.develops.stud11314025.availaballs.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/TextNamaLapangan"
        app:font="@string/font_roboto"
        android:textColor="@color/txtclr1"
        android:text="Nama Lapangan"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextNo"
        android:layout_toEndOf="@+id/TextNo" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>


</RelativeLayout>
