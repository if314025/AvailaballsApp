<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bolalob.develops.stud11314025.availaballs.Activity.MainActivity">

    <bolalob.develops.stud11314025.availaballs.CustomView.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:font="@string/font_roboto"
        android:textSize="12sp"
        android:textColor="@color/clrtxt1"
        android:text="No"
        android:id="@+id/TextNo"
         />

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_main"
        android:scrollbars="vertical"
        android:layout_below="@+id/TextNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        ></android.support.v7.widget.RecyclerView>

    <bolalob.develops.stud11314025.availaballs.CustomView.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Lokasi"
        android:textColor="@color/clrtxt1"
        app:font="@string/font_roboto"
        android:id="@+id/customFontTextView"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextNamaLapangan"
        android:layout_toEndOf="@+id/TextNamaLapangan" />

    <bolalob.develops.stud11314025.availaballs.CustomView.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/TextNamaLapangan"
        app:font="@string/font_roboto"
        android:textColor="@color/clrtxt1"
        android:text="Nama Lapangan"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="33dp" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:background="@color/clrAddLpng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:onClick=""
        app:menu="@menu/my_navigation_items"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
