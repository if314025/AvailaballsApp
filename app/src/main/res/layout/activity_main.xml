<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context="bolalob.develops.stud11314025.availaballs.Activity.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:id="@+id/rv_main"
        android:scrollbars="vertical"
        android:layout_below="@+id/TextNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        ></android.support.v7.widget.RecyclerView>

    <bolalob.develops.stud11314025.availaballs.CustomView.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Lokasi"
        android:textColor="@color/clrtxt1"
        app:font="@string/font_roboto"
        android:id="@+id/customFontTextView"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextNamaLapangan"
        android:layout_toEndOf="@+id/TextNamaLapangan" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        app:itemTextColor="@color/clrpressed"
        app:paddingStart="@dimen/activity_horizontal_margin"
        android:background="@color/clrAddLpng"
        android:layout_width="fill_parent"
        android:gravity="center_vertical|center"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/my_navigation_items"
        android:textAlignment="center"
         />

    <bolalob.develops.stud11314025.availaballs.CustomView.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:font="@string/font_roboto"
        android:textSize="12sp"
        android:textColor="@color/clrtxt1"
        android:text="No"
        android:id="@+id/TextNo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <bolalob.develops.stud11314025.availaballs.CustomView.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/TextNamaLapangan"
        app:font="@string/font_roboto"
        android:textColor="@color/clrtxt1"
        android:text="Nama Lapangan"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextNo"
        android:layout_toEndOf="@+id/TextNo" />

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="@color/clrtxt1"
        android:gravity="center_horizontal"
        android:text="Belum ada Data Lapangan yang masuk"
        android:textStyle="italic"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="140dp"
        android:src="@drawable/emptydata"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
