<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context="bolalob.develops.stud11314025.availaballs.Activity.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:id="@+id/rv_main"
        android:scrollbars="vertical"
        android:layout_below="@+id/TextNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/size140"
        ></android.support.v7.widget.RecyclerView>

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Lokasi"
        android:visibility="gone"
        android:textColor="@color/clrtxt1"
        app:font="@string/font_roboto"
        android:id="@+id/customFontTextView"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TvNamaLapangan"
        android:layout_toEndOf="@+id/TvNamaLapangan" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        app:itemTextColor="@color/clrpressed"
        app:paddingStart="@dimen/activity_horizontal_margin"
        android:background="@color/clrAddLpng"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/my_navigation_items"
        android:textAlignment="center"
        android:paddingBottom="19dp" />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
        android:id="@+id/TextNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="No"
        android:textColor="@color/clrtxt1"
        android:textSize="12sp"
        android:visibility="gone"
        app:font="@string/font_roboto" />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/TvNamaLapangan"
        app:font="@string/font_roboto"
        android:textColor="@color/clrtxt1"
        android:text="Nama Lapangan"
        android:visibility="gone"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextNo"
        android:layout_toEndOf="@+id/TextNo" />

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="@color/clrtxt1"
        android:gravity="center_horizontal"
        android:text="Belum ada Data Lapangan yang masuk"
        android:textStyle="italic"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="140dp"
        android:src="@drawable/emptydata"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontButton
        android:id="@+id/button4"
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size40"
        android:layout_alignTop="@+id/button3"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:background="@drawable/rectanglebutton"
        android:text="..."
        android:textColor="@color/colorstate"
        android:textSize="6sp"
        android:visibility="gone"
        app:font="@string/font_stoke" />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontButton
        android:id="@+id/button3"
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size40"
        android:layout_above="@id/navigation"
        android:layout_alignBottom="@id/rv_main"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/size80"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/rectanglebutton"
        android:text="3"
        android:textColor="@color/colorstate"
        android:textSize="@dimen/font12"
        android:visibility="gone"
        app:font="@string/font_stoke" />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontButton
        android:id="@+id/button2"
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size40"
        android:layout_alignBottom="@+id/button3"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:background="@drawable/rectanglebutton"
        android:text="2"
        android:textColor="@color/colorstate"
        android:textSize="@dimen/font12"
        android:visibility="gone"
        app:font="@string/font_stoke" />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontButton
        android:id="@+id/button1"
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size40"
        android:layout_above="@id/navigation"
        android:layout_alignBottom="@+id/button4"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:background="@drawable/rectanglebutton"
        android:text="1"
        android:textColor="@color/colorstate"
        android:textSize="@dimen/font10"
        android:visibility="gone"
        app:font="@string/font_stoke" />

    <bolalob.develops.stud11314025.availaballs.Widget.CustomFontButton
        android:id="@+id/button5"
        android:layout_width="30dp"
        android:layout_height="@dimen/size40"
        android:layout_alignTop="@+id/button4"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:background="@drawable/rectanglebutton"
        android:text="10"
        android:textColor="@color/colorstate"
        android:textSize="@dimen/font12"
        android:visibility="gone"
        app:font="@string/font_stoke" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:background="@drawable/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />


</RelativeLayout>
