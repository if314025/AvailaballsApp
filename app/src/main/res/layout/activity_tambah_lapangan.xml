<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/uploadFotoButton"
            android:text="upload foto lapanganmu &#10; *720x340px"
            android:textStyle="italic"
            android:textAllCaps="false"
            android:textColor="#808080"
            android:textSize="12sp"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:drawableTop="@drawable/icon_camera"
            android:background="@drawable/uploadfotobutton"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/texteditdark">

            <bolalob.develops.stud11314025.availaballs.CustomView.CustomFontTextView
                android:id="@+id/iconLapanganTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="18dp"
                android:text="@string/icon_lapangan"
                app:font="@string/font_icon">

            </bolalob.develops.stud11314025.availaballs.CustomView.CustomFontTextView>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputNamaLapangan"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:theme="@style/TextLabel">

                <bolalob.develops.stud11314025.availaballs.CustomView.CustomFontEditTextView
                    android:id="@+id/eTNamaLapangan"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/clrline"
                    android:ems="10"
                    android:hint="Nama Lapangan"
                    android:inputType="text"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:background="@android:color/transparent"
                    app:font="@string/font_roboto" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/texteditdark">

            <bolalob.develops.stud11314025.availaballs.CustomView.CustomFontTextView
                android:id="@+id/customFontTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="18dp"
                android:text="@string/icon_lapangan"
                app:font="@string/font_icon">

            </bolalob.develops.stud11314025.availaballs.CustomView.CustomFontTextView>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputTipeLapangan"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:theme="@style/TextLabel">

                <bolalob.develops.stud11314025.availaballs.CustomView.CustomFontEditTextView
                    android:id="@+id/eTTipeLapangan"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/clrline"
                    android:ems="10"
                    android:hint="Tipe Lapangan"
                    android:inputType="text"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:background="@android:color/transparent"
                    app:font="@string/font_roboto" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/circlebutton"
            android:text="Selanjutnya"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:layout_gravity="center"
            android:onClick="nextStep"/>

    </LinearLayout>

</ScrollView>